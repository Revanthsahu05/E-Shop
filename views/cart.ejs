<%- include('./partials/header') %>

    <% let sum=0; let dis=0; %>

        <% user.cart.forEach((product)=> { %>
            <div class="w-full flex items-start px-10 gap-5 py-5">
                <div class="w-[30%] rounded-md overflow-hidden">
                    <div class="w-full h-72 flex justify-center items-center bg-red-100">
                        <img class="h-[12rem]" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                            alt="<%= product.name %>">
                    </div>
                    <div class="w-full flex justify-between px-4 py-3">
                        <h3 class="text-xl">
                            <%= product.name %>
                        </h3>
                        <div class="flex items-center gap-1">
                            <i class="w-6 h-6 bg-white flex rounded-full items-center justify-center ri-add-line" ></i>
                            <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                            <i
                                class="w-6 h-6 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                        </div>
                    </div>
                    <div class="flex items-center justify-between px-4 py-2">
                        <h4 class="text-md">PRICE</h4>
                        <h2 class="text-md">₹ <%= product.price %>
                        </h2>
                    </div>
                </div>
                <div class="w-[70%]">
                    <h3 class="text-lg">Price Breakdown</h3>
                    <div class="px-6 mt-3">
                        <div class="flex mt-1">
                            <h4 class="w-1/3">Total MRP</h4>
                            <h4>₹ <%= product.price %>
                            </h4>
                        </div>
                        <div class="flex mt-1">
                            <h4 class="w-1/3">Discount on MRP</h4>
                            <h4>₹ <%= product.discount %>
                            </h4>
                        </div>
                    </div>
                    <div class="w-full h-[1px] bg-gray-300 mt-5"></div>
                </div>
            </div>

            <% sum +=product.price; dis +=product.discount; %>
                <% }) %>

                    <div class="w-full flex flex-col px-10 py-5 gap-3">
                        <div class="flex justify-between">
                            <h4 class="w-1/3 text-md">Platform Fee</h4>
                            <h4 class="text-md">₹ 20</h4>
                        </div>
                        <div class="flex justify-between">
                            <h4 class="w-1/3 text-md">Shipping Fee</h4>
                            <h4 class="text-md">FREE</h4>
                        </div>
                        <div class="flex justify-between mt-3">
                            <h3 class="w-1/3 text-lg font-bold">Total Amount</h3>
                            <h3 class="text-lg font-semibold text-green-600">₹ <%= sum - dis + 20 %>
                            </h3>
                        </div>
                        <form action="" class="mt-3">
                            <button type="submit"
                                class="bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600">
                                BUY
                            </button>
                        </form>
                    </div>

                    <%- include('./partials/footer') %>